<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Título fijo en la parte superior -->
    <TextView
        android:id="@+id/tvInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brown"
        android:padding="16dp"
        android:text="Inicio"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido/a"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvInicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Texto "Terapias asignadas" -->
    <TextView
        android:id="@+id/tvTerapiasAsignadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terapias asignadas"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ScrollView para las tarjetas -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvTerapiasAsignadas"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tarjeta 1: Columna cervical -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Columna cervical"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/terapiacervical"
                        app:srcCompat="@drawable/terapiacervical" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descripción general"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Este ejercicio consiste en inclinar lateralmente el cuello mientras se permanece sentado con la espalda apoyada en el respaldo de una silla Su propósito es movilizar suavemente la columna cervical, liberar tensiones musculares acumuladas por malas posturas o esfuerzo repetitivo, y favorecer la conciencia corporal en la zona del cuello Es especialmente útil en procesos de rehabilitación por dolor cervical, rigidez articular o fatiga muscular, y debe realizarse con calma para evitar molestias como mareo o tensión innecesaria."
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"
                        android:textAlignment="viewStart"
                        android:justificationMode="inter_word"/>

                    <Button
                        android:id="@+id/btnCervical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REALIZAR"
                        android:backgroundTint="@color/brown"
                        android:textColor="@color/white"
                        android:layout_gravity="end"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta 2: Columna lumbar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Columna lumbar"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/terapialumbar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descripción general"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Este ejercicio se realiza de pie, con los pies alineados al ancho de los hombros y las manos en la cintura, flexionando lateralmente el tronco hacia un lado sin girar el cuerpo El movimiento busca movilizar la columna lumbar en el plano lateral de forma controlada, regresando siempre a la posición central antes de cambiar de lado Está indicado para mejorar la flexibilidad lumbar, reducir la rigidez en la parte baja de la espalda y favorecer una postura equilibrada en procesos de rehabilitación o prevención de dolor lumbar"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"
                        android:textAlignment="viewStart"
                        android:justificationMode="inter_word"/>

                    <Button
                        android:id="@+id/btnLumbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REALIZAR"
                        android:backgroundTint="@color/brown"
                        android:textColor="@color/white"
                        android:layout_gravity="end"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
